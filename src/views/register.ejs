<!DOCTYPE html>

<html lang = 'en'>

    <%- include('./partials/head.ejs') %> <!-- Includes HTML Configurations -->

    <body>

        <%- include('./partials/nav.ejs') %> <!-- Includes navigation -->
        <%- include('./partials/search-bar.ejs') %> <!-- Includes search bar -->

        <div id = 'register' class = 'dark-shadow'>

            <h1>Register</h1>

            <form id = 'register-form' action = '/register' method = 'POST' enctype = 'multipart/form-data'>

                <label for = 'firstname'>First Name</label>
                <input type = 'text' class = 'firstname' name = 'firstname'>
                <label class = 'error-msg' for = 'firstname'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.firstname) { %>
                            <%= errors.firstname.msg %>
                        <% } %>
                    <% } %>
                </label>

                <label for = 'lastname'>Last Name</label>
                <input type = 'text' class = 'lastname' name = 'lastname'>
                <label class = 'error-msg' for = 'lastname'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.lastname) { %>
                            <%= errors.lastname.msg %>
                        <% } %>
                    <% } %>
                </label>

                <label for = 'birthdate'>Date of Birth</label>
                <div class = 'birthdate'>
                    <input type = 'number' class = 'day' name = 'day' min = 1 max = 31 placeholder = 'day'>
                    <input type = 'number' class = 'month' name = 'month' min = 1 max = 12 placeholder = 'month'>
                    <input type = 'number' class = 'year' name = 'year' min = 1900 max = 2008 placeholder = 'year'>
                </div>
                <label class = 'error-msg' for = 'birthdate'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.day) { %>
                            <%= errors.day.msg %>
                        <% } %>
                    <% } %>
                </label>

                <div class = 'gender'>
                    <label for = 'female'>Female</label>
                    <input type = 'radio' name = 'gender' class = 'female' value = 'female'>

                    <label for = 'male'>Male</label>
                    <input type = 'radio' name = 'gender' class = 'male' value = 'male'>
                </div>
                <label class = 'error-msg' for = 'gender'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.gender) { %>
                            <%= errors.gender.msg %>
                        <% } %>
                    <% } %>
                </label>

                <label for = 'image'>Profile Picture</label>
                <input type = 'file' class = 'fileButton' name = 'image'>
                <label class = 'error-msg' for = 'image'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.image) { %>
                            <%= errors.image.msg %>
                        <% } %>
                    <% } %>
                </label>

                <label for = 'email'>Email</label>
                <input type = 'email' class = 'email' name = 'email'>
                <label class = 'error-msg' for = 'email'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.email) { %>
                            <%= errors.email.msg %>
                        <% } %>
                    <% } %>
                </label>

                <label for = 'password'>Password</label>
                <input type = 'password' class = 'password' name = 'password'>
                <label class = 'error-msg' for = 'password'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.password) { %>
                            <%= errors.password.msg %>
                        <% } %>
                    <% } %>
                </label>

                <label for = 'confirmation'>Repeat Password</label>
                <input type = 'password' class = 'confirmation' name = 'confirmation'>
                <label class = 'error-msg' for = 'confirmation'>
                    <% if (typeof errors != 'undefined') { %>
                        <% if (errors.confirmation) { %>
                            <%= errors.confirmation.msg %>
                        <% } %>
                    <% } %>
                </label>

                <button>Submit</button>
                <p class = 'prompt'>Already have an account? <a href = '/'>Log in</a></p>
                
            </form>
        </div>

        <%- include('./partials/footer.ejs') %> <!-- Includes footer -->

    </body>
</html>