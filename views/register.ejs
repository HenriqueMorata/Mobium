<!DOCTYPE html>

<html lang = 'en'>

    <%- include('./partials/head.ejs') %> <!-- Includes HTML Configurations -->

    <body>

        <%- include('./partials/nav.ejs') %> <!-- Includes navigation -->
        <%- include('./partials/search-bar.ejs') %> <!-- Includes search bar -->

        <div id = 'register' class = 'dark-shadow'>

            <h1>Register</h1>

            <form id = 'register-form'>

                <input class = 'form-input' type = 'text' id = 'firstname' name = 'firstname' required>
                <input class = 'form-input' type = 'text' id = 'lastname' name = 'lastname' required>

                <div id = 'birthdate'>
                    <input class = 'form-input' type = 'number' id = 'day' name = 'day' min = 1 max = 31 placeholder = 'day' required>
                    <input class = 'form-input' type = 'number' id = 'month' name = 'month' min = 1 max = 12 placeholder = 'month' required>
                    <input class = 'form-input' type = 'number' id = 'year' name = 'year' min = 1900 max = 2008 placeholder = 'year' required>
                </div>

                <div id = 'genders'>
                    <label for = 'female'>Female</label>
                    <input class = 'form-input' type = 'radio' id = 'female' name = 'gender' value = 'female' required>

                    <label for = 'male'>Male</label>
                    <input class = 'form-input' type = 'radio' id = 'male' name = 'gender' value = 'male'>
                </div>

                <input class = 'form-input' type = 'email' id = 'email' name = 'email' required>
                <input class = 'form-input' type = 'password' id = 'password' name = 'password' required>
                <input class = 'form-input' type = 'password' id = 'confirmation' name = 'confirmation' required>

                <label for = 'firstname'>First Name</label>
                <label for = 'lastname'>Last Name</label>
                <label for = 'birthday'>Date of Birth</label>
                <label id = 'email-label' for = 'email'>E-Mail</label>
                <label for = 'password'>Password</label>
                <label for = 'confirmation'>Repeat Password</label>

                <input class = 'button' type = 'submit' value = 'Submit'>
                <p id = 'login-prompt'>Already have an account? <a href = '/'>Log in</a></p>

            </form>
        </div>

        <%- include('./partials/footer.ejs') %> <!-- Includes footer -->

    </body>
</html>